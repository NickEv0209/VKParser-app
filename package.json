{
  "name": "electron-update-app",
  "version": "2.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder",
    "package": "electron-builder -p always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "productName": "VKParser",
    "publish": [
      {
        "provider": "github",
        "owner": "NickEv0209",
        "repo": "VKParser-app",
        "private": false
      }
    ],
    "win": {
      "icon": "./img/VKP.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "MyApp",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "installerIcon": "assets/icons/installer-icon.ico",
      "uninstallerIcon": "assets/icons/uninstaller-icon.ico",
      "installerHeaderIcon": "assets/icons/installer-header-icon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "puppeteer": "^23.11.1"
  }
}
